<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Facturación</h3>
    </div>
    <div class="panel-body">
        <div id="cabecera"></div>
        <div id="detalles"></div>
    </div>
    <div class="panel-footer"></div>
</div>



<script>
    $(document).ready(function ($) {
        $(function () {
            $("#cabecera").dxForm({
                colCount: 2,
                items: [{
                    itemType: "group",
                    caption: "Información del Cliente",
                    items: [
                        {
                            dataField: "Identificacion",
                            caption: "Identificación",
                            editorOptions: {
                                showClearButton: true,
                                mask: "0000000000",
                                maskRules: { "X": /[0-9]/ }
                            }


                        }, "Nombre", "Apellido", "Direccion", {
                            dataField: "Telefono",
                            editorOptions: {
                                showClearButton: true,
                                mask: "(42)-000000",
                                maskRules: { "X": /[0-9]/ }
                            }
                        }]
                },
                    {
                        itemType: "group",
                        caption: "Vendedor",
                        items: ["Nombre", {
                            itemType: "group",
                            caption: "Pago",
                            items: [{
                                dataField: "Forma Pago",
                                editorType: "dxSelectBox",
                                editorOptions: {
                                    items: ["Contado", "Credito"],
                                    showClearButton: true
                                }

                            },
                                {
                                    dataField: "Dias Plazo",
                                    editorType: "dxNumberBox",
                                    editorOptions: {
                                        showSpinButtons: true,
                                        showClearButton: true
                                    }
                                }]

                        }]
                    }

                ]
            });
        });
    });


    //DETALLES 
    $(document).ready(function($) {
        $(function () {
            $("#detalles").dxDataGrid({
                dataSource: [],
                columns: [
                    {
                        dataField: "producto",
                        caption: "Producto",
                        setCellValue: function(rowData, value) {
                            rowData.productoId = value;

                        },
                        lookup: {
                            
                        }


                    },
                    {
                        dataField: "cantidad",
                        caption: "Cantidad",
                        dataType: "number"
                    }, {
                        dataField: "precio",
                        caption: "Precio",
                        dataType: "number"
                        //editorOptions: {
                        //    mask: "$00.00",
                        //    maskRules: { "X": /[0-9]/ }
                        //}


                    },
                    {
                        dataField: "subtotal",
                        caption: "Subtotal",
                        //editorOptions: {
                        //    mask: "$00,00",
                        //    maskRules:{"X": /[0-9]/}
                        //} 

                        editorOptions: {
                            disabled: true
                        },
                        calculateCellValue: function (data) {
                            console.log(data);

                            return [
                                data.cantidad *
                                data.precio
                            ];
                        },
                        onCellHoverChanged: function (e) {
                            console.log(e);
                        }


                    }

                ],
                editing: {
                    mode: "row",
                    allowAdding: true,

                },
                showColumnLines: false,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                footer: true


            });

        });
    });

    
</script>